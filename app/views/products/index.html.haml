                    0
                %p.tax （税込）
        .product-box__list
          = link_to '#', class:'new-product' do
            %figure.product-box__img
              = image_tag '/assets/products/sample2.jpeg', class:'pickup-size'
            .product-box__body
              %h3.name 餃子
              .detail
                %ul.price-line
                  %li.price 500円
                  %li
                    %i.fa.fa-star.likeIcon
                    0
                %p.tax （税込）
        .product-box__list
          = link_to '#', class:'new-product' do
            %figure.product-box__img
              = image_tag '/assets/products/sample6.jpeg', class:'pickup-size'
            .product-box__body
              %h3.name 餃子
              .detail
                %ul.price-line
                  %li.price 500円
                  %li
                    %i.fas.fa-star.likeIcon
                    0
                %p.tax （税込）
